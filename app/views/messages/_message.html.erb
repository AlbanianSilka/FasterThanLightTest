<div class="cont-<%=message.user.id%>">
  <div class="message-box msg-<%= message.user.id %> <%= current_user_message?(message, @current_user) ? 'my_msg' : 'usr_msg'%>">
    <% unless message.room.is_private %>
      <h6 class="name"> <%= message.user.email %> </h6>
    <% end %>
    <%= message.body %>
  </div>
</div>