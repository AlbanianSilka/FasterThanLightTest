<p style="color: green"><%= notice %></p>

<h1>Expenses</h1>

<table class="table">
  <tr>
    <th><%= sortable "Name"%></th>
    <th><%= sortable "expense_type", "Type"%></th>
    <th><%= sortable "Price"%></th>
    <th></th>
  </tr>
  <% @expenses.each do |expense| %>
    <tr>
      <td><%= expense.name %></td>
      <td><%= expense.expense_type %></td>
      <td><%= expense.price %></td>
      <td><%= link_to "Show this expense", expense %></td>
    </tr>
  <% end %>
</table>

<%= link_to "New expense", new_expense_path %>
