<p style="color: green"><%= notice %></p>

<h1>Expenses</h1>

<div id="expenses">
  <% sorted_expenses = @expenses.sort_by { |expense | -expense.price } %>
  <% sorted_expenses.each do |expense| %>
    <%= render expense %>
    <p>
      <%= link_to "Show this expense", expense %>
    </p>
  <% end %>
</div>

<%= link_to "New expense", new_expense_path %>
